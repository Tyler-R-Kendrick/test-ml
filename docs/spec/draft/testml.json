{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Language-agnostic Test-Spec â€“ version 1.6",
  "type": "object",
  "required": ["schema_version", "tests"],
  "properties": {
    "schema_version": {"const": "1.6"},
    "uid": {"type": "string"},
    "tags": {"type": "array", "items": {"type": "string"}},

    "mocks": {
      "type": "array",
      "items": {"$ref": "#/definitions/mock"}
    },

    "tests": {
      "type": "array",
      "items": {"$ref": "#/definitions/testCase"}
    }
  },
  "definitions": {
    "jsonValue": {
      "oneOf": [
        {"type": "string"},
        {"type": "number"},
        {"type": "boolean"},
        {"type": "object"},
        {"type": "array"},
        {"type": ["null"]}
      ]
    },

    "times": {
      "type": "string",
      "pattern": "^(?i)(never|always|exactly\\(\\d+\\)|atLeast\\(\\d+\\)|atMost\\(\\d+\\))$"
    },

    "mock": {
      "type": "object",
      "required": ["id", "expr"],
      "properties": {
        "id": {"type": "string"},
        "expr": {"type": "string"},
        "returns": {
          "oneOf": [
            {"$ref": "#/definitions/jsonValue"},
            {"type": "array", "items": {"$ref": "#/definitions/jsonValue"}}
          ]
        },
        "throws": {
          "oneOf": [
            {"type": "string"},
            {"type": "array", "items": {"type": "string"}}
          ]
        },
        "callback": {"type": "string"},
        "times": {"$ref": "#/definitions/times"},
        "when": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["case"],
            "properties": {
              "case": {"type": "string"},
              "returns": {"oneOf": [
                {"$ref": "#/definitions/jsonValue"},
                {"type": "array", "items": {"$ref": "#/definitions/jsonValue"}}
              ]},
              "throws": {"oneOf": [
                {"type": "string"},
                {"type": "array", "items": {"type": "string"}}
              ]},
              "times": {"$ref": "#/definitions/times"},
              "callback": {"type": "string"}
            }
          }
        }
      }
    },

    "testCase": {
      "type": "object",
      "required": ["id", "arrange", "act", "assert"],
      "properties": {
        "id": {"type": "string"},
        "tags": {"$ref": "#/properties/tags"},
        "uses": {"type": "array", "items": {"type": "string"}},

        "arrange": {
          "type": "object",
          "properties": {
            "refs": {
              "type": "array",
              "items": {"type": "string"}
            },
            "vars": {
              "oneOf": [
                {"type": "object"},
                {"type": "array", "items": {"type": "object"}}
              ]
            },
            "mocks": {
              "type": "array",
              "items": {"$ref": "#/definitions/mock"}
            }
          }
        },

        "act": {
          "type": "object",
          "required": ["expr"],
          "properties": {
            "expr": {"type": "string"},
            "rows": {
              "oneOf": [
                {"type": "array", "items": {"type": "object"}},
                {"type": "string"}
              ]
            },
            "permutations": {
              "type": "object",
              "additionalProperties": {
                "oneOf": [
                  {"type": "array", "items": {"$ref": "#/definitions/jsonValue"}},
                  {"$ref": "#/definitions/jsonValue"}
                ]
              }
            },
            "timeout": {
              "oneOf": [
                {"type": "string", "pattern": "^P(T.*)$"},
                {"type": "integer", "minimum": 1}
              ]
            },
            "retry": {
              "type": "object",
              "required": ["attempts"],
              "properties": {
                "attempts": {"type": "integer", "minimum": 1},
                "backoff": {"type": "string", "pattern": "^P(T.*)$"}
              }
            },
            "callback": {"type": "string"}
          }
        },

        "assert": {
          "type": "object",
          "properties": {
            "returns": {
              "oneOf": [
                {"type": "string"},
                {"type": "array", "items": {"type": "string"}}
              ]
            },
            "throws": {
              "oneOf": [
                {"type": "string"},
                {"type": "array", "items": {"type": "string"}}
              ]
            },
            "mocks": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["id", "calls"],
                "properties": {
                  "id": {"type": "string"},
                  "calls": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "required": ["when", "times"],
                      "properties": {
                        "when": {"type": "string"},
                        "times": {"$ref": "#/definitions/times"}
                      }
                    }
                  }
                }
              }
            }
          },
          "oneOf": [
            {"required": ["returns"]},
            {"required": ["throws"]},
            {"required": ["returns", "throws"]}
          ]
        }
      }
    }
  }
}